{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9", 
        "maxDuration": 10
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/app.py"
    }
  ],
  "env": {
    "FLASK_HOST": "0.0.0.0",
    "FLASK_PORT": "5000",
    "GROQ_MODEL": "openai/gpt-oss-120b",
    "EMBEDDING_MODEL": "all-MiniLM-L6-v2"
  }
}
